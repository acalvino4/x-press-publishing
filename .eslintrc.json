{
    "env": {
        "es2020": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "plugin:import/errors",
        "plugin:import/warnings"
    ],
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": ["import"],
    "rules": {
        "no-shadow": "off",
        "no-unused-vars": "off",
        "space-before-function-paren": "off",
        "func-names": "off",
        "comma-dangle": "off",
        "import/extensions": ["error", "always"]
    },
    "settings": {
        "import/extensions": []
    }
}
